@model ReelViewModel

<form method="post" asp-controller="Reel" asp-action="GetReels">
    <aside>
        <div class="accordion" id="accordionPanelsStayOpenExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                        Диаметр, мм
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                    <div class="accordion-body">
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.diameter_50, new { @Value = "false" })
                                <a> 50 </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.diameter_55, new { @Value = "false" })
                                <a> 55 </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.diameter_60, new { @Value = "false" })
                                <a> 60 </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.diameter_65, new { @Value = "false" })
                                <a> 65 </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.diameter_70, new { @Value = "false" })
                                <a> 70 </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.diameter_75, new { @Value = "false" })
                                <a> 75 </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="true" aria-controls="panelsStayOpen-collapseTwo">
                        Материал
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">
                    <div class="accordion-body">
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.plastic, new { @Value = "false" })
                                <a> пластик </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.metalPlastic, new { @Value = "false" })
                                <a> металл/пластик </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="true" aria-controls="panelsStayOpen-collapseTwo">
                        Компания
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">
                    <div class="accordion-body">
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.peers, new { @Value = "false" })
                                <a> Пирс </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.stalker, new { @Value = "false" })
                                <a> Сталкер </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="true" aria-controls="panelsStayOpen-collapseTwo">
                        Особенность
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">
                    <div class="accordion-body">
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.withTrigger, new { @Value = "false" })
                                <a> С курком </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="true" aria-controls="panelsStayOpen-collapseThree">
                        Цвет
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingThree">
                    <div class="accordion-body">
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.green, new { @Value = "false" })
                                <a> зеленый </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.black, new { @Value = "false" })
                                <a> черный </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.blackRed, new { @Value = "false" })
                                <a> черно-красный </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.blackWhite, new { @Value = "false" })
                                <a> черно-белый </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.lightGreen, new { @Value = "false" })
                                <a> салатовый </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.blackOrange, new { @Value = "false" })
                                <a> черно-оранжевый </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.greenYellow, new { @Value = "false" })
                                <a> зелено-желтый </a>
                            </span>
                        </div>
                        <div class="form-check">
                            <span class="filter_item">
                                @Html.EditorFor(x => x.beige, new { @Value = "false" })
                                <a> бежевый </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseFour" aria-expanded="true" aria-controls="panelsStayOpen-collapseFour">
                        Цена
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseFour" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingFour">
                    <div class="accordion-body">
                        <div class="form-check">
                            <div class="row">
                                <div class="col">
                                    <input type="number" min="0" onkeydown="PriceValid()" class="form-control" placeholder="от" aria-label="от" asp-for="@Model.priceFrom">
                                </div>
                                <div class="col">
                                    <input type="number" min="0" onkeydown="PriceValid()" class="form-control" placeholder="до" aria-label="до" asp-for="@Model.priceTo">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseFour" aria-expanded="true" aria-controls="panelsStayOpen-collapseFour">
                        Вес, г
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseFour" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingFour">
                    <div class="accordion-body">
                        <div class="form-check">
                            <div class="row">
                                <div class="col">
                                    <input type="number" min="0" onkeydown="PriceValid()" class="form-control" placeholder="от" aria-label="от" asp-for="@Model.weightFrom">
                                </div>
                                <div class="col">
                                    <input type="number" min="0" onkeydown="PriceValid()" class="form-control" placeholder="до" aria-label="до" asp-for="@Model.weightTo">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="my-3">
            <input type="submit" class="btn btn-primary" value="Применить фильтр" />
            @Html.HiddenFor(x => x.selectedValue)
            @Html.HiddenFor(x => x.subCatalogId)
        </div>
    </aside>
</form>
