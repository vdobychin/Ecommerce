@model ShopCart

<h6 style="display:inline">
    <a asp-controller="Home" asp-action="Index">Каталог</a>
    <span> - </span>
    <a asp-controller="Home" asp-action="GetMonofilamentLines">Монофильная леска</a>
</h6>


<div class="row">
    <div class="col-9">
        @{
            foreach (var product in ViewBag.products)
            {
                <partial name="_ProductCard.cshtml" model="product" />
            }
        }
    </div>

    <div class="col-3">
        @await Html.PartialAsync("_MonofilamentLinesFilters")
    </div>
</div>
