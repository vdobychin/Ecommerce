@model Ecommerce.ViewModels.ProductShopCartViewModel

<div class="row">
    <h6 style="display:inline">
        <a asp-controller="Home" asp-action="Index">Каталог</a>
        <span> - </span>
        <a asp-controller="Line" asp-action="GetLines">Леска</a>
        @if (!String.IsNullOrEmpty(Model.subCatalogName))
        {
            <span> - </span>
            <a asp-controller="Line" asp-action=@Model.actionName>@Model.subCatalogName</a>
        }

    </h6>
</div>

<div class="row">
    <div class="col-9">
        @{
            foreach (Line line in ViewBag.products)
            {
                <partial name="~/Views/Shared/_ProductCard.cshtml" model="line" />
            }
        }
    </div>

    <div class="col-3">
        @await Html.PartialAsync("_LinesFilters")
    </div>
</div>
